{
  "name": "weather-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that provides weather data from the National Weather Service API",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "dev": "npm run build && node build/index.js",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "test": "npm run build",
    "format": "npx prettier --write \"src/**/*.{ts,js,json}\""
  },
  "bin": {
    "weather-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "weather",
    "nws",
    "national-weather-service",
    "cli",
    "api"
  ],
  "author": "Omri Grossman",
  "license": "MIT",
  "homepage": "https://github.com/omrigrossman/weather-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/omrigrossman/weather-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/omrigrossman/weather-mcp/issues"
  },
  "type": "module",
  "dependencies": {
    "@mcp-ui/server": "^5.11.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}
